# Configuration cheat sheet: https://docs.gitea.io/en-us/config-cheat-sheet/
RUN_USER = gitea
RUN_MODE = prod
APP_NAME = Gitea: Git with a cup of tea
WORK_PATH = /var/lib/gitea

[repository]
ROOT = /var/lib/gitea/data/gitea-repositories
SCRIPT_TYPE = sh

[server]
STATIC_ROOT_PATH = /usr/share/webapps/gitea
APP_DATA_PATH = /var/lib/gitea/data
LFS_START_SERVER = true
SSH_DOMAIN = gitea.bytedev.duckdns.org
DOMAIN = gitea.bytedev.duckdns.org
HTTP_PORT = 3000
ROOT_URL = https://gitea.bytedev.duckdns.org/
DISABLE_SSH = false
SSH_PORT = 22
LFS_JWT_SECRET = {{ lfs_jwt_secret }}
OFFLINE_MODE = true

[database]
DB_TYPE = postgres
PATH = /var/lib/gitea/db/gitea.db
SSL_MODE = require
HOST = postgresql.bytedev.duckdns.org:5432
NAME = gitea
USER = gitea
PASSWD = {{ password }}
SCHEMA = gitea_schema
LOG_SQL = false

[session]
PROVIDER = file

[log]
ROOT_PATH = /var/log/gitea
MODE = file
LEVEL = info

[lfs]
PATH = /var/lib/gitea/data/lfs

[mailer]
ENABLED = false

[service]
REGISTER_EMAIL_CONFIRM = false
ENABLE_NOTIFY_MAIL = false
DISABLE_REGISTRATION = false
ALLOW_ONLY_EXTERNAL_REGISTRATION = false
ENABLE_CAPTCHA = false
REQUIRE_SIGNIN_VIEW = false
DEFAULT_KEEP_EMAIL_PRIVATE = false
DEFAULT_ALLOW_CREATE_ORGANIZATION = true
DEFAULT_ENABLE_TIMETRACKING = true
NO_REPLY_ADDRESS = noreply.localhost

[openid]
ENABLE_OPENID_SIGNIN = true
ENABLE_OPENID_SIGNUP = true

[cron.update_checker]
ENABLED = false

[repository.pull-request]
DEFAULT_MERGE_STYLE = merge

[repository.signing]
DEFAULT_TRUST_MODEL = committer

[security]
INSTALL_LOCK = true
INTERNAL_TOKEN = {{ internal_token }}

[oauth2]
JWT_SECRET = {{ jwt_secret }}