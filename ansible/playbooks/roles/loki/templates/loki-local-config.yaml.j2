auth_enabled: false

server:
  http_listen_port: 3100
  grpc_listen_port: 9096
  log_level: info

common:
  path_prefix: /mnt/observability/loki
  storage:
    filesystem:
      chunks_directory: /mnt/observability/loki/chunks
      rules_directory: /mnt/observability/loki/rules
  replication_factor: 1
  ring:
    kvstore:
      store: inmemory

schema_config:
  configs:
    - from: 2024-01-01
      store: tsdb
      object_store: filesystem
      schema: v13
      index:
        prefix: index_
        period: 24h

storage_config:
  tsdb_shipper:
    active_index_directory: /mnt/observability/loki/index
    cache_location: /mnt/observability/loki/cache

limits_config:
  retention_period: 168h  # 7 days
  max_query_lookback: 168h  # Maximum lookback period for queries
  ingestion_rate_mb: 10
  ingestion_burst_size_mb: 20
  per_stream_rate_limit: 5MB
  per_stream_rate_limit_burst: 10MB
  max_entries_limit_per_query: 5000
  max_streams_per_user: 10000
  max_global_streams_per_user: 50000

compactor:
  working_directory: /mnt/observability/loki/compactor
  compaction_interval: 10m
  retention_enabled: true
  retention_delete_delay: 2h
  retention_delete_worker_count: 150
  delete_request_store: filesystem

ruler:
  storage:
    type: local
    local:
      directory: /mnt/observability/loki/rules
  rule_path: /mnt/observability/loki/ruler
  ring:
    kvstore:
      store: inmemory
  enable_api: true
