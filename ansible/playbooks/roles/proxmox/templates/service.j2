[Unit]
Description=TrueNAS NFS Share Availability Check
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/truenas_check.sh
RemainAfterExit=yes
TimeoutStartSec={{ truenas_check_timeout }}

Restart=on-failure
RestartSec=60
StartLimitBurst=3

[Install]
WantedBy=multi-user.target