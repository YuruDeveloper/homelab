{% raw %}
{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "panels": [

    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "id": 1,
      "targets": [
        {
          "expr": "sum(count_over_time({service=\"nginx\", log_type=\"access\"} | json | threat_score > 0 [$__interval]))",
          "refId": "A"
        }
      ],
      "title": "Attack Attempts",
      "type": "stat"
    },

    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "id": 2,
      "targets": [
        {
          "expr": "count(count by (client_ip) (count_over_time({service=\"nginx\", log_type=\"access\"} | json | threat_score > 0 [$__interval])))",
          "refId": "A"
        }
      ],
      "title": "Unique Attacking IPs",
      "type": "stat"
    },

    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "id": 3,
      "targets": [
        {
          "expr": "sum(count_over_time({service=\"nginx\", log_type=\"error\"} | json | threat_score > 0 [$__interval]))",
          "refId": "A"
        }
      ],
      "title": "Critical Error Events",
      "type": "stat"
    },

    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "id": 4,
      "targets": [
        {
          "expr": "sum by (attack_type) (count_over_time({service=\"nginx\", log_type=\"access\"} | json | attack_type != \"none\" [$__interval]))",
          "legendFormat": "{{attack_type}}",
          "refId": "A"
        }
      ],
      "title": "Attack Type Distribution",
      "type": "timeseries"
    },

    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "id": 5,
      "targets": [
        {
          "expr": "topk(10, sum by (client_ip) (count_over_time({service=\"nginx\", log_type=\"access\"} | json | threat_score > 0 [$__range])))",
          "refId": "A"
        }
      ],
      "title": "Top Attacking IPs",
      "type": "table",
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true },
            "renameByName": {
              "client_ip": "IP Address",
              "Value": "Count"
            }
          }
        }
      ]
    },

    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "id": 6,
      "targets": [
        {
          "expr": "sum by (status) (count_over_time({service=\"nginx\", log_type=\"access\"} | json | unwrap status_code | label_format status=\"{{floor(status_code/100)}}xx\" [$__interval]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "title": "HTTP Status Distribution",
      "type": "timeseries"
    },

    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "id": 7,
      "targets": [
        {
          "expr": "sum by (http_method) (count_over_time({service=\"nginx\", log_type=\"access\"} | json [$__interval]))",
          "legendFormat": "{{http_method}}",
          "refId": "A"
        }
      ],
      "title": "HTTP Method Distribution",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["nginx", "security", "vector"],
  "time": { "from": "now-6h", "to": "now" },
  "title": "Nginx Security Dashboard",
  "uid": "nginx-security",
  "version": 1
}

