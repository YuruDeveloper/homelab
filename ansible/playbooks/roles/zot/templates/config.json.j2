{
  "distSpecVersion": "1.1.0",
  "storage": {
    "rootDirectory": "/mnt/zot",
    "gc": true,
    "gcDelay": "2h",
    "gcInterval": "24h",
    "dedupe": true
  },
  "http": {
    "address": "0.0.0.0",
    "port": "7000"
  },
  "log": {
    "level": "info",
    "audit": "/var/log/zot/audit.log"
  },
  "extensions": {
    "ui": {
      "enable": true
    },
    "search": {
      "enable": true,
      "cve": {
        "updateInterval": "24h"
      }
    },
    "scrub": {
      "enable": true,
      "interval": "24h"
    },
    "lint": {
      "enable": false
    },
    "sync": {
      "enable": true,
      "registries": [
        {
          "urls": ["https://registry-1.docker.io"],
          "onDemand": true,
          "tlsVerify": true,
          "maxRetries": 5,
          "retryDelay": "30s"
        }
      ]
    },
    "metrics": {
      "enable": true,
      "prometheus": {
        "path": "/metrics"
      }
    }
  }
}