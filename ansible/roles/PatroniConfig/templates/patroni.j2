scope: postgresql-cluster
namespace: /service/
name: {{ etcd_member_names[etcd_member_index] }}

{% set clusters = [] %}
{% for i in range(etcd_member_ips | length) %}
{% set _ = clusters.append(etcd_member_ips[i] + ':2379') %}
{% endfor %}
etcd3:
  hosts: {{ clusters | join(',') }}
  protocol: http

restapi:
  listen: 0.0.0.0:8008
  connect_address: {{ etcd_member_ips[etcd_member_index]  }}:8008

bootstrap:
  dcs:
    ttl: 30
    loop_wait: 10
    retry_timeout: 10
    maximum_lag_on_failover: 1048576
    postgresql:
      parameters:
        ssl: 'off'
      pg_hba:
        - host replication replicator 127.0.0.1/32 md5
        - host replication replicator {{ subnet }} md5
        - host all all 127.0.0.1/32 md5
        - host all all {{ subnet }} md5
  
  initdb:
    - encoding: UTF8
    - data-checksums

postgresql:
  listen: 0.0.0.0:5432
  connect_address: {{ etcd_member_ips[etcd_member_index]  }}:5432
  data_dir: /var/lib/postgresql/{{ postgresql_version }}/data
  bin_dir: /usr/bin
  authentication:
    superuser:
      username: postgres
      password: {{ password }}
    replication:
      username: replicator
      password: {{ password }}
  parameters:
    max_connections: 100
    shared_buffers: 256MB

tags:
  nofailover: false
  noloadbalance: false
  clonefrom: false